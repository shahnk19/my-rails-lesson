<h1>Edit User</h1>

<%= form_with model: @user do |form| %>
<div>
  <%= form.label :name %><br />
  <%= form.text_field :name %>
</div>

<div>
  <%= form.label :email %><br />
  <%= form.text_field :email %>
</div>

<div>
  <%= form.label :admin %><br />
  <%= form.check_box :admin %>
</div>

<div><%= form.submit %></div>
<% end %>
